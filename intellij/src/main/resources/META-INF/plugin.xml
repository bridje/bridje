<idea-plugin>
    <id>dev.bridje.intellij</id>
    <name>Bridje</name>
    <version>0.1.0</version>
    <vendor>Bridje</vendor>

    <description>
        IntelliJ plugin for the Bridje language.
    </description>

    <depends>com.intellij.modules.platform</depends>


    <extensions defaultExtensionNs="com.intellij">
        <!-- Register the language file type -->
        <fileType name="Bridje"
                  language="Bridje"
                  extensions="brj"
                  implementationClass="brj.intellij.BridjeFileType"/>
    </extensions>
</idea-plugin>
